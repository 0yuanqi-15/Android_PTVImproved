<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="2">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/stop_route"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="50px"
            android:layout_marginLeft="@dimen/text_margin"/>


        <TextView
            android:id="@+id/stop_direction"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:layout_weight="0.6"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_column="2"
            android:textSize="40px"
        />



        <ImageView
            android:id="@+id/stop_time_image"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_watch_later_24"/>


        <TextView
            android:id="@+id/stop_time"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:minWidth="75dp"
            android:textSize="50px"
            android:layout_marginRight="@dimen/text_margin"/>

        <ImageView
            android:id="@+id/route_detail_image"
            android:layout_width="30dp"
            android:minWidth="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_keyboard_arrow_right_24"/>


    </TableRow>


</TableLayout>